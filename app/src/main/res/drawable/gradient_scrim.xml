<?xml version="1.0" encoding="utf-8"?>
<!-- This drawable creates a vertical gradient from transparent to semi-transparent black.
     It's used as a background for the overlay to ensure text is readable on any image. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="270"
        android:startColor="#00000000"
        android:centerColor="#40000000"
        android:endColor="#D9000000"
        android:type="linear" />
</shape>