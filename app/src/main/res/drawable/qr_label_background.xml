<?xml version="1.0" encoding="utf-8"?>
<!-- This drawable creates a semi-transparent black background with rounded corners.
     It's used for the QR label to ensure it's readable when overlaid on top of images. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#A6000000" /> <!-- 65% opaque black -->
    <corners android:radius="16dp" />
</shape>