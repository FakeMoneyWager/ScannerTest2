<?xml version="1.0" encoding="utf-8"?>
<!--
    - Root changed to ConstraintLayout to enforce a square aspect ratio.
    - width is "match_parent" to fill the column provided by the GridLayoutManager.
    - layout_constraintDimensionRatio="1:1" makes the height equal to the dynamic width, creating a perfect square.
    - All margins are removed to ensure images are edge-to-edge.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Image Thumbnail"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>