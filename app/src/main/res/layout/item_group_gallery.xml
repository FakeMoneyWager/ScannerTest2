<?xml version="1.0" encoding="utf-8"?>
<!--
    - The layout now consists of the image grid with the QR label/delete button overlaid on top.
    - The separate ImageButton for delete is removed.
    - The gradient scrim is removed.
    - A 2dp bottom margin creates a thin separator line between groups.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="4"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_gallery_image"
        tools:spanCount="3" />

    <!-- This TextView now serves as BOTH the label and the delete button -->
    <TextView
        android:id="@+id/tvQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/qr_label_background"
        android:elevation="4dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/rvImages"
        app:layout_constraintTop_toTopOf="@id/rvImages"
        tools:text="❌ INV123456789" />

</androidx.constraintlayout.widget.ConstraintLayout>