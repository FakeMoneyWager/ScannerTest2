<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Original colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 1. Set the global background color -->
        <item name="android:windowBackground">@color/app_background_grey</item>

        <!-- 2. Make the status bar and navigation bar transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- 3. MODIFIED: Make status bar icons light for visibility on a dark background -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CardShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ModeButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="backgroundTint">@color/flash_button_background_color</item>
        <item name="iconPadding">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <!-- DELETED: This style is no longer used for the new UI design -->
    <!--
    <style name="QrDisplayButton" parent="Widget.MaterialComponents.Button">
        ...
    </style>
    -->

</resources>